<!DOCTYPE html>
<html>
    <head>
        <title>name and calci</title>  
       
        <script>
          
           function subnumber()
           {
            let num1=document.getElementById("Firstnumber").value*1;
            let num2=document.getElementById("Secondnumber").value*1;
            let result=num1-num2;

            let res=document.getElementById("res");
            res.innerText=result;
           }
           function addnumber()
           {
            let num1=document.getElementById("Firstnumber").value*1;
            let num2=document.getElementById("Secondnumber").value*1;
            let result=num1+num2;

            let res=document.getElementById("res");
            res.innerText=result;
           }
           function mulnumber()
           {
            let num1=document.getElementById("Firstnumber").value*1;
            let num2=document.getElementById("Secondnumber").value*1;
            let result=num1*num2;

            let res=document.getElementById("res");
            res.innerText=result;
           }
           function displayname()
           {
            let username1=document.getElementById("name1").value;
            let res=document.getElementById("res")
            res.innerText=username1
           }
           function convertuppercase()
           {
            let username1=document.getElementById("name1").value;
            let res=document.getElementById("res")
            res.innerText=username1.toUpperCase()
           }
           function concatstrings()
           {
            let username1=document.getElementById("name1").value;
            let username2=document.getElementById("name2").value;
            let res=document.getElementById("res")
            res.innerText=username1.concat(username2)
           }
           function getlength()
           {
            let username1=document.getElementById("name1").value;
            let res=document.getElementById("res")
            res.innerText=username1.length
           }
           function changetocolor(color)
           {
            document.bgColor=color
           }
        </script>
    </head>
    <body>
        <center>
        <br>
        <label for="name">Name</label>
        <input type="text" id="name1" placeholder="Enter your name1">
        <input type="text" id="name2" placeholder="Enter your name2">
<br>
        <button onclick="displayname()">Display name</button>
        <button onclick="convertuppercase()">Convert uppercase</button>
        <button onclick="concatstrings()">Concat</button>
        <button onclick="getlength()">get Length</button>
        <br>
        <br>
        <label>Number</label>
        <input type="number" id="Firstnumber" placeholder="Enter first number">
        <input type="number" id="Secondnumber" placeholder="Enter Second number">
        <br>
        <button onclick="addnumber()">add</button>
        <button onclick="subnumber()">sub</button>
        <button onclick="mulnumber()">mul</button>
        <br>
        <br>
        <p>Choose your page colur</p>
        <button onclick="changetocolor('green')">green</button>
        <button onclick="changetocolor('red')">red</button>
        <button onclick="changetocolor('white')">white</button>
        <button onclick="changetocolor('orange')">orange</button>
        <button onclick="changetocolor('purple')">purple</button>
        
        <h1  id="res"></h1>
        <center>

    </body>
</html>
